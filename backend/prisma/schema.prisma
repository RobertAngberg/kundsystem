// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Customer {
  id         Int        @id @default(autoincrement())
  email      String     @unique
  name       String?
  phone      String?
  companyId  Int?
  company    Company?   @relation(fields: [companyId], references: [id])
  ownerId    String?    // Supabase user id - vem "äger" kunden
  owner      Profile?   @relation(fields: [ownerId], references: [id])
  teamId     Int?       // Multi-tenant: vilket team kunden tillhör
  team       Team?      @relation(fields: [teamId], references: [id])
  activities Activity[]
  deals      Deal[]
  tasks      Task[]
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}

model Company {
  id        Int        @id @default(autoincrement())
  name      String
  orgNumber String?    @unique
  email     String?
  phone     String?
  website   String?
  address   String?
  city      String?
  zipCode   String?
  teamId    Int?       // Multi-tenant: vilket team företaget tillhör
  team      Team?      @relation(fields: [teamId], references: [id])
  customers Customer[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Activity {
  id         Int      @id @default(autoincrement())
  type       String   // "call", "email", "meeting", "note"
  content    String
  customerId Int
  customer   Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
}

model Profile {
  id           String        @id // Supabase auth user id
  email        String        @unique
  name         String?
  role         String        @default("sales") // "admin", "sales", "viewer"
  avatarUrl    String?
  teamId       Int?          // Multi-tenant: vilket team användaren tillhör
  team         Team?         @relation(fields: [teamId], references: [id])
  customers    Customer[]
  deals        Deal[]
  tasks        Task[]
  activityLogs ActivityLog[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model Deal {
  id          Int      @id @default(autoincrement())
  title       String
  value       Float    @default(0)
  stage       String   @default("lead") // "lead", "contact", "proposal", "negotiation", "won", "lost"
  customerId  Int
  customer    Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  ownerId     String?
  owner       Profile? @relation(fields: [ownerId], references: [id])
  teamId      Int?     // Multi-tenant: vilket team dealen tillhör
  team        Team?    @relation(fields: [teamId], references: [id])
  description String?
  closedAt    DateTime?
  tasks       Task[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Task {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  dueDate     DateTime?
  completed   Boolean   @default(false)
  priority    String    @default("medium") // "low", "medium", "high"
  customerId  Int?
  customer    Customer? @relation(fields: [customerId], references: [id], onDelete: Cascade)
  dealId      Int?
  deal        Deal?     @relation(fields: [dealId], references: [id], onDelete: Cascade)
  ownerId     String?
  owner       Profile?  @relation(fields: [ownerId], references: [id])
  teamId      Int?      // Multi-tenant: vilket team uppgiften tillhör
  team        Team?     @relation(fields: [teamId], references: [id])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model ActivityLog {
  id          Int      @id @default(autoincrement())
  action      String   // "created", "updated", "deleted", "stage_changed"
  entityType  String   // "customer", "company", "deal", "task"
  entityId    Int
  entityName  String   // Namnet på entiteten för visning
  oldValue    String?  // För ändringar, t.ex. gammalt steg
  newValue    String?  // För ändringar, t.ex. nytt steg
  userId      String?  // Vem som gjorde ändringen
  user        Profile? @relation(fields: [userId], references: [id])
  teamId      Int?     // Multi-tenant: vilket team aktiviteten tillhör
  team        Team?    @relation(fields: [teamId], references: [id])
  createdAt   DateTime @default(now())
}

// Multi-tenant: Team/Organisation
model Team {
  id           Int           @id @default(autoincrement())
  name         String
  slug         String        @unique // URL-vänligt namn, t.ex. "acme-corp"
  description  String?
  members      Profile[]
  customers    Customer[]
  companies    Company[]
  deals        Deal[]
  tasks        Task[]
  activityLogs ActivityLog[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}
